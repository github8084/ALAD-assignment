{
    "compilerOptions": {
      "module": "NodeNext",
      "target": "ES6",
      "sourceMap": true,
      "rootDir": "./",
      "outDir": "./build",
      "resolveJsonModule": true,
      "removeComments": true,
      "strict": false,
      "lib": ["esnext"],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true

    },
    "include": ["./src/**/*","environment.d.ts" ],
    "exclude": ["node_modules"],
    "ts-node": {
      "esm": true
    }
  }